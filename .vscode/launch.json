    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": true,
            "localRoot": "${workspaceRoot}/",
            "remoteRoot": "/app/",
            "runtimeExecutable": "docker-compose",
            "runtimeArgs": [
                "exec", "-T", "node", "npm", "run", "test:debug"
            ]
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": true,
            "outDir": null,
            "localRoot": "${workspaceRoot}/",
            "remoteRoot": "/app/"
        }
    ]
}